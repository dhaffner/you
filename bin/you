#!/usr/bin/env python
"""you.

Usage:
  you --url=<url>
  you --video=<id>
  you [--lucky | -l] [--query | -q] <term>...

Options:
  -h --help             Show this screen.
  -u <url> --url=<url>  The URL
  -v <id> --video=<id>  The YouTube video ID to use.
  --version             Show version.
  --query -q            Search.
  --lucky -l            Search and take first result.
"""
from docopt import docopt
from you import main

if __name__ == '__main__':
    arguments = docopt(__doc__, version='0.0.1')
    controller = main.You()

    if arguments['--url']:
        controller.play(arguments['--url'])

    elif arguments['--video']:
        url = 'http://www.youtube.com/watch?v={}'.format(arguments['--video'])
        controller.play(url)

    elif arguments['--query']:
        controller.search(' '.join(arguments['<term>']))

    elif arguments['--lucky']:
        controller.search(' '.join(arguments['<term>']), lucky=True)
